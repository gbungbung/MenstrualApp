<Init_4Screen>
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20), dp(20),dp(20), dp(40)
        RelativeLayout:
            size_hint:  None, 1
            width: root.width if root.width < 600 else 600
            height: root.height
            pos_hint: {'center_x': .5, 'center_y': .5}
            MDBoxLayout:
                padding: dp(40), dp(10),dp(40), dp(0)
                orientation: 'vertical'
                spacing: dp(10)
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: dp(40), dp(0),dp(40), dp(0)
                    size_hint_y: None
                    height: dp(48)
                    MDProgressBar:
                        size_hint_y: None
                        height: dp(2)
                        value: 40
                        orientation: 'horizontal'
                        color: app.main_color
                    MDLabel:
                        text: '2/5'
                        halign: 'center'
                MDBoxLayout:
                    # The layout to cover/balance the space so textfield to be center
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(90)
                    padding: dp(80), dp(0),dp(80), dp(0)
                    MDLabel:
                        size_hint_y: None
                        height: dp(30)
                        text: 'Enter range'
                        halign: 'center'
                        valign: 'center'
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: dp(60)
                        padding: dp(20), dp(0),dp(20), dp(0)
                        MDTextField:
                            id: range
                            multiline: False
                            font_size: sp(12)
                            mode: 'rectangle'
                            radius: [5,5,5,5]
                            helper_text_mode: 'persistent'
                            input_type: 'int'
                            
                            #hint_text_color_normal: 1,0,.5,1
                            hint_text_color_focus: 0,0,0,1
                            line_color_focus: 0,0,0,1
                            text_color_focus: 0,0,0,1
                            pos_hint: {"center_y": .5, "center_x":.5}

                MDBoxLayout:
                    # The layout to cover/balance the space so textfield to be center
                MDBoxLayout:
                    size_hint_y: None
                    height: dp(30)
                    MDFlatButton:
                        text: 'Back'
                        pos_hint: {"center_y": .5, "center_x":.5}
                        on_release: root.parent.set_current('init_2screen')
                        canvas.before:
                            Color:
                                rgba: app.main_color
                            Line:
                                width: 1
                                rectangle: self.x, self.y, self.width, self.height
                    MDBoxLayout:
                    MDFlatButton:
                        text: 'Next'
                        pos_hint: {"center_y": .5, "center_x":.5}
                        on_release: root.save_date()
                        canvas.before:
                            Color:
                                rgba: app.main_color
                            Line:
                                width: 1
                                rectangle: self.x, self.y, self.width, self.height
